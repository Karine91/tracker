<div class="container">
  <div class="thumbnail-wrap center-block">
    {{thumbnail-elem (concat '/' model.cryptid.profileImg) model.cryptid.name}}
  </div>
  <div class="text-center">
    <h3>{{model.cryptid.name}}</h3>
    <h4>Location: {{model.location}}</h4>
  </div>
  <h4>Witnesses: ({{model.witnesses.length}})</h4>
  <ul class="list-group witnesses">
    {{#each model.witnesses as |witness|}}
      <li class="list-group-item witnesses__item">{{witness.fullName}}</li>
    {{/each}}
  </ul>
  {{#link-to 'sighting.edit' model.id tagName="button"
    class="btn btn-success btn-block"}}
    Edit
  {{/link-to}}
</div>
