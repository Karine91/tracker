<h1>New Sighting</h1>
<form {{action "create" on="submit"}}>
  <div class="form-group">
    <label for="name">Cryptid</label>
    {{#x-select action="didMakeCryptidSelection" on="change" class="form-control" as |xs| }}
      <option>Select Cryptid</option>
      {{#each model.cryptids as |cryptid|}}
        {{#xs.option value=cryptid}}{{cryptid.name}}{{/xs.option}}
      {{/each}}
    {{/x-select}}
  </div>
  <div class="form-group">
    <label>Witnesses</label>
    {{#x-select value=model.sighting.witnesses action="didMakeWitnessSelection" on="change" multiple=true class="form-control" as |xs| }}
      {{#xs.option}}Select Witnesses{{/xs.option}}
      {{#each model.witnesses as |witness|}}
        {{#xs.option value=witness}}{{witness.fullName}}{{/xs.option}}
      {{/each}}
    {{/x-select}}
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    {{input value=model.sighting.location
      type="text" class="form-control" name="location" required=true}}
  </div>
  <div class="form-group">
    <label for="sightingAt">Location</label>
    <input onchange={{action "formatDate" value="target.value"}} value=model.sighting.sightedAt type="date" class="form-control" name="sightingAt" required />
  </div>
  <button type="submit" class="btn btn-primary btn-block">Create</button>
  <button {{action 'cancel'}} class="btn btn-link btn-block">Cancel</button>
</form>
